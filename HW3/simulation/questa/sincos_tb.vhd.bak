LIBRARY ieee;                                               
USE ieee.std_logic_1164.all;                                

ENTITY sincos_vhd_tst IS
END sincos_vhd_tst;
ARCHITECTURE sincos_arch OF sincos_vhd_tst IS
-- constants
-- CONSTANT
-- signals                                                   
SIGNAL a : STD_LOGIC_VECTOR(9 DOWNTO 0):= "0000000000";
SIGNAL areset : STD_LOGIC := '0';
SIGNAL c : STD_LOGIC_VECTOR(4 DOWNTO 0);
SIGNAL clk : STD_LOGIC := '0';
SIGNAL s : STD_LOGIC_VECTOR(4 DOWNTO 0);
COMPONENT sincos
	PORT (
	a : IN STD_LOGIC_VECTOR(9 DOWNTO 0);
	areset : IN STD_LOGIC;
	c : OUT STD_LOGIC_VECTOR(4 DOWNTO 0);
	clk : IN STD_LOGIC;
	s : OUT STD_LOGIC_VECTOR(4 DOWNTO 0)
	);
END COMPONENT;
BEGIN
	i1 : sincos
	PORT MAP (
-- list connections between master ports and signals
	a => a,
	areset => areset,
	c => c,
	clk => clk,
	s => s
	);
	

init : PROCESS                                               
-- variable declarations                                     
BEGIN                                                        
        -- code that executes only once 
	
WAIT;                                                       
END PROCESS init;

clk_process: PROCESS
BEGIN
	clk <= '0';
	wait for 5 ns;
	clk <= '1';
	wait for 5 ns;
END PROCESS clk_process;

always : PROCESS                                              
-- optional sensitivity list                                  
-- (        )                                                 
-- variable declarations                                     

BEGIN                                                         
        -- code executes for every event on sensitivity list  
	wait for 10 ns;
	a <= "0000000000";
	
	wait for 10 ns;
	areset <= '1';
	wait for 10 ns;
	areset <= '0';
	
	
	wait for 10 ns;
	a <= "0000001000";
	
	wait for 10 ns;
	areset <= '1';
	wait for 10 ns;
	areset <= '0';
	
	wait for 10 ns;
	a <= "0000100000";
	
	wait for 10 ns;
	areset <= '1';
	wait for 10 ns;
	areset <= '0';

WAIT;                                                        
END PROCESS always;                                          
END sincos_arch;
